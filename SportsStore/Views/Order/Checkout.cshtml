@model  Order

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" asp-method="post">
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" />
    </div><h3>Adress</h3>
    <div class="form-group">
        <label>Line1:</label>
        <input asp-for="Location.Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Line2:</label>
        <input asp-for="Location.Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Line3:</label>
        <input asp-for="Location.Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label>
        <input asp-for="Location.City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Region:</label>
        <input asp-for="Location.Region" class="form-control" />
    </div>
    <div class="form-group">
        <label>Zip:</label>
        <input asp-for="Location.Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Country:</label>
        <input asp-for="Location.Country" class="form-control" />
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" />Gift wrap this items
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>